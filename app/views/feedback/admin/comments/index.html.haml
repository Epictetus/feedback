- content_for :page_header do
  = render "feedback/admin/comments/admin_header"
  
%section#comment-admin
  .page-header
    %h1
      Comments Admin
  
  %ul.nav.nav-tabs
    %li.active
      %a{:href => "#default", :"data-toggle" => "tab"}
        Active
    %li
      %a{:href => "#deleted", :"data-toggle" => "tab"}
        Deleted
      
  .tab-content
    .tab-pane.active#default
      = render "table", :comments => @comments, :table_id => "comment-list"
    .tab-pane#deleted
      = render "table", :comments => @deleted_comments, :table_id => "deleted-comment-list"