- content_for :page_header do
  .row
    .span12
      %ul.breadcrumb
        %li
          = link_to "Blog Posts", blog_posts_path
          %span.divider
            = "/"
        %li.active
          = @blog_post.title
      
.row
  .span6.offset3
    .page-header
      %h2
        = @blog_post.title
        %small
          = "by #{@blog_post.author.name}"
          %i.icon-user
    
    %ul.thumbnails
      %li.span4
        = link_to image_tag("http://placehold.it/360x268"), "#", :class => "thumbnail"
      %li.span2
        = link_to image_tag("http://placehold.it/160x120"), "#", :class => "thumbnail"
      %li.span2
        = link_to image_tag("http://placehold.it/160x120"), "#", :class => "thumbnail"
  .span3
  
  .span6.offset3
    %p
      = @blog_post.body
  .span3
  
  .span6.offset3
    .page-header
      %h3
        Join the Discussion
        %small
          You will be asked to log in or register.
          
    = render "feedback/comments/widget", :commentable => @blog_post
    
  .span3