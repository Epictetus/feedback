- content_for :page_header do
  .row
    .span12
      %ul.breadcrumb
        %li
          = link_to "Home", blog_posts_path
          %span.divider
            = "/"
        %li.active
          Blog Posts
      
.row
  .span6.offset3
    .page-header
      %h2
        = @blog_post.title
        %small
          by Bobby Brown
          %i.icon-user
    
    %ul.thumbnails
      %li.span4
        = link_to image_tag("http://placehold.it/360x268"), "#", :class => "thumbnail"
      %li.span2
        = link_to image_tag("http://placehold.it/160x120"), "#", :class => "thumbnail"
      %li.span2
        = link_to image_tag("http://placehold.it/160x120"), "#", :class => "thumbnail"
  .span3
  
  .span6.offset3
    %p
      = @blog_post.body
  .span3
  
  .span6.offset3
    .page-header
      %h3
        Join the Discussion
        %small
          You will be asked to log in or register.
          
    .feedback-comment-widget
    
      - if defined?(Feedback::Models::Likable)
        .community-panel
          %ul
            %li.like
              %button
                Like
            %li.unlike
              %button
                Unlike
            %li.recent-liker
              = image_tag("https://si0.twimg.com/profile_images/1807338004/small_avatar_mini.jpg")
            %li.like-stats
              and 1,446 others liked this.

      = render "feedback/comments/new", :commentable => @blog_post
      
      .comments-list
        - comments = @blog_post.comments
        %h3
          = "Showing #{comments.size} comments"
        .controls
          %ul
            %li.sort-by
              = form_tag("#") do
                = label_tag "sort_by", "Sort by"
                = select_tag "sort_by", options_for_select(["Popularity", "Rating", "Oldest first", "Newest first"])
            
            %li.subscribe-email
              %i.icon-envelope
              Subscribe by email
            
            %li.subscribe-rss
              %i.icon-retweet
              Get RSS feed
              
        - comments.each do |comment|
          .comment
            .header
              %ul
                %li
                  .author-avatar
                    = image_tag("https://si0.twimg.com/profile_images/1807338004/small_avatar_mini.jpg")
                %li.author-name
                  %strong
                    = comment.author.name
                %li.in-reply-to
                %li.time-ago
                  = "#{time_ago_in_words(comment.created_at)} ago"
                  
            .body
              %blockquote
                %p
                  = comment.body
              
            .reply{:id => "reply-to-comment-#{comment.id}-form", :style => "display: none;"}
              = render "feedback/comments/new", :commentable => comment, :btn_text => "Reply", :placeholder_text => "Type your reply here."
              
            .footer
              %ul
                - if defined?(Feedback::Models::Likable)
                  %li
                    10 people liked this comment.
                  %li
                    .btn-group
                      %button
                        Like
                      
                %li
                  .btn-group
                    %a.btn.btn-mini.dropdown-toggle{:href => "flag-comment-#{comment.id}-menu", :"data-toggle" => "dropdown"}
                      Flag as
                      %span.caret
                    %ul.dropdown-menu{:id => "flag-comment-#{comment.id}-menu"}
                      %li
                        = link_to "Inappropriate", "#"
                      %li
                        = link_to "Spam", "#"
                        
                %li
                  .btn-group
                    = link_to "Reply", "#", :id => "reply-to-comment-#{comment.id}-btn", :class => "btn btn-mini reply-to-comment-btn"
                    
  .span3